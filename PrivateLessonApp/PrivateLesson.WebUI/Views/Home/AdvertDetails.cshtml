@model AdvertViewModel
<div class="container pt-4 mb-5">
    <div class="row">
        <div class="col-3">
            <div class="row">
                
                    <div class="col-12 pb-3">
                        <img class="w-100" src="/images/@Model.Image.Url" />
                    </div>
                

            </div>
        </div>
        <div class="col-5 bg-light p-3">
            <h3 class="display-6 fs-4 fw-normal text-danger">@Model.FirstName @Model.LastName</h3>
          
           
           
            <div class="mt-3">
                <h3 class="display-6 fs-4 fw-normal text-danger mt-2">Tüm Dersler</h3>
                <h6 class="d-inline">Kategori:</h6>
              @*  @for (int i = 0; i < Model.Br; i++)
                {
                    <span class="display-6 fs-6 fw-normal text-primary">@Model.BranchName @(i == Model.BranchName.Count() - 1 ? "" : " | ")</span>
                }*@
                
               
            </div>
           
            <h3 class="display-6 fs-4 fw-normal text-danger mt-3">Seçili Ders</h3>
            <p class="fs-6">@Html.Raw(Model.Description)</p>
        </div>
        <div class="col-4">
            @*Fiyat Bölümü*@
            <div class="border-1 border-warning border p-3 pb-0">
                <div class="row">
                    <div class="col-6 d-flex justify-content-center align-items-center">
                        <h5 class="fs-3 text-primary">@($"{Model.Price:C2}")</h5>
                    </div>
                    <div class="col-6 text-center">
                        <p class="fs-6 text-center">Tedarik süresi 3-5 gündür.</p>
                        <form asp-area=""
                              asp-controller="Cart"
                              asp-action="AddToCart"
                              method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-warning">Sepete Ekle</button>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <p class="text-success mb-2 mt-2 fw-bold">300 TL üzeri kargo bedava!</p>
                    </div>
                </div>
            </div>
          
        </div>
    </div>
</div>
